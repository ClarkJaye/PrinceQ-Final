    //Helper

    function DisplayServeTV() {
        $.ajax({
            type: 'GET',
            url: "/Display/GetServings",
            dataType: "json",
            success: function (response) {
                console.log(response)

                // Loop through the clerks and display the queue numbers
                for (var i = 1; i <= 3; i++) {
                    var clerkNumber = localStorage.getItem("Clerk" + i);
                    var display = document.getElementById('TVClerk' + i);

                    if (display && clerkNumber) {
                        var servedCustomer = response.find(function (item) {
                            return item.userId === clerkNumber;
                        });

                        if (servedCustomer) {
                            var categoryLetter = getCategoryLetter(servedCustomer.categoryId);
                            var queueNumberServe = servedCustomer.queueNumberServe !== null ? servedCustomer.queueNumberServe : "----";
                            display.innerText = categoryLetter + " - " + queueNumberServe;
                        } else {
                            display.innerText = "----";
                        }
                    }
                }
            },
            error: function (req, status, error) {
                console.log(status);
            }
        });
    }

    function getCategoryLetter(categoryId) {
        var categories = {
            1: "A",
            2: "B",
            3: "C",
            4: "D"
        };
        return categories[categoryId] || "----";
    }


