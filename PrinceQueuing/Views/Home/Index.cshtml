@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<div class="d-flex justify-content-center align-items-center fst-italic mb-3">
    <h1 class="text-center">Welcome to Prince Retail</h1>
</div>


<div class="row">
    <div class="col-12">
        <div class="container bg-white rounded border shadow p-3">

            <div class="d-flex align-items-center justify-content-center gap-2">

                <a class="d-grid box p-3 text-decoration-none text-dark btn btn-outline-secondary px-5" asp-controller="RegisterPersonnel" asp-action="Home">
                    <i class="lni lni-user" style="font-size: 50px;"></i>
                    <p class="mt-3">Serving</p>
                </a>
                <a class="d-grid box btn-outline-secondary p-3 text-dark btn btn-outline-secondary px-5" asp-controller="Admin" asp-action="Dashboard">
                    <i class="lni lni-cog" style="font-size: 50px;"></i>
                    <p class="mt-3">Admin</p>
                </a>
            </div>


        </div>
    </div>
</div>


<style>
    .box:hover{
        background: #157347;
        border-color: #157347;
        color: white!important;
        cursor:pointer;
    }
</style>